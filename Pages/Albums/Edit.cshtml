@page
@model Naznean_LarisaGabriela_Proiect.Pages.Albums.EditModel

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Albume</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<h1>Edit</h1>

<h4>Album</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Album.ID" />
            <div class="form-group">
                <label asp-for="Album.Title" class="control-label"></label>
                <input asp-for="Album.Title" class="form-control" />
                <span asp-validation-for="Album.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Album.Singer" class="control-label"></label>
                <input asp-for="Album.Singer" class="form-control" />
                <span asp-validation-for="Album.Singer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Album.Price" class="control-label"></label>
                <input asp-for="Album.Price" class="form-control" />
                <span asp-validation-for="Album.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Album.PublishingDate" class="control-label"></label>
                <input asp-for="Album.PublishingDate" class="form-control" />
                <span asp-validation-for="Album.PublishingDate" class="textdanger"></span>
            </div>
            <label asp-for="Album.RecordID" class="control-label">Record Name</label>
            <select asp-for="Album.RecordID" class="form-control" asp-items="ViewBag.RecordID">
            </select>
            <span asp-validation-for="Album.RecordID" class="text-danger"></span>
            <div class="form-group">
                <div class="table">
                    <table>
                        <tr>
                            @{
                                int cnt = 0;
                                foreach (var cat in Model.AssignedCategoryDataList)
                                {
                                    if (cnt++ % 3 == 0)
                                    {
                                    @:</tr><tr>
                                    }
                                    @:<td>
                                        <input type="checkbox"
                                               name="selectedCategories"
                                               value="@cat.CategoryID"
                                               @(Html.Raw(cat.Assigned ? "checked=\"checked\"" : "")) />
                                        @cat.CategoryID @: @cat.Name
                                    @:</td>
                                }
                            @:</tr>
                            }
                        </table>
                    </div>
                </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
